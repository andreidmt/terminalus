{
    "name"  : "npm terminal dashboard",
    "frames": {
        "eslint": {
            "label": "ESLint",
            "cmd": "lint",
            "args": [ "--", "--color" ],
            "watch": "source/**/*.@(js|json)",
            "pipeError": true
        },
        "flow": {
            "label": "Flow",
            "cmd": "flow",
            "args": [ "--", "--color=always" ],
            "clear": true
        },
        "tape": {
            "label": "Tape",
            "cmd": "test",
            "args": [ "--", "--color" ],
            "clear": true,
            "watch": "source/**/*.test.js",
            "meta": [ "status" ]
        },
        "babel": {
            "label": "Babel",
            "cmd": "build",
            "watch": "source/**/*.@(js|json)",
            "args": [ "--", "--color" ]
        },
        "debug": {
            "label": "Node inspect",
            "cmd": "node",
            "args": [ "--inspect-brk", "source/test.js" ],
            "clear": true
        }
    },

    "layout": {
        "td:70": {
            "tr:50": [ "tape", "flow" ],
            "tr": [ "eslint" ]
        },
        "td": [ "debug", "babel" ]
    }

}
