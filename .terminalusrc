{
    "title"  : "halt and catch fire",
    "frames": {
        "eslint": {
            "label": "ESLint",
            "cmd": "lint",
            "args": [ "--", "--color" ],
            "watch": "source/**/*.@(js|json)",
            "showErrors": true
        },
        "flow": {
            "label": "Flow",
            "cmd": "flow",
            "args": [ "--", "--color=always" ]
        },
        "tape": {
            "label": "Tape",
            "cmd": "test",
            "args": [ "--", "--color" ],
            "watch": "source/**/*.test.js",
            "meta": [ "status" ]
        },
        "babel": {
            "label": "Babel",
            "cmd": "build",
            "watch": "source/**/*.@(js|json)",
            "args": [ "--", "--color" ]
        },
        "debug": {
            "label": "Node inspect",
            "cmd": "node",
            "args": [ "--inspect-brk", "source/test.js" ]
        }
    },
    "layout": {
        "td:70": {
            "tr:50": [ "tape", "flow" ],
            "tr": [ "eslint" ]
        },
        "td": [ "debug", "babel" ]
    }
}
