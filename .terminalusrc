{
    "name"  : "Halt and catch fire",
    "frames": {
        "eslint": {
            "label": "ESLint",
            "cmd": "npm",
            "args": [ "run", "lint", "--", "--color" ],
            "stderr": false,
            "watch": {
                "glob": "source/"
            }
        },
        "flow": {
            "label": "Flow",
            "cmd": "npm",
            "args": [ "run", "flow", "--", "--color=always" ],
            "stderr": false,
            "clearOnRestart": true
        },
        "tape": {
            "label": "Tape",
            "cmd": "npm",
            "args": [ "run", "test", "--", "--color" ],
            "stderr": false,
            "clearOnRestart": true
        },
        "babel": {
            "label": "Babel",
            "cmd": "npm",
            "args": [ "run", "build", "--", "--color" ]
        },
        "debug": {
            "label": "Node inspect",
            "cmd": "node",
            "args": [ "--inspect-brk", "source/test.js" ]
        }
    },
    "layout": [
        [ "debug" ],
        [ "tape:60", "flow" ],
        [ "babel", "eslint:60" ]
    ]
}
