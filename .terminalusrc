{
    "name"  : "npm terminal dashboard",
    "frames": {
        "eslint": {
            "label": "ESLint",
            "cmd": "npm",
            "args": [ "run", "lint", "--", "--color" ],
            "watch":  "source/**/*.js",
            "pipeError": false
        },
        "flow": {
            "label": "Flow",
            "cmd": "npm",
            "args": [ "run", "flow", "--", "--color=always" ],
            "clear": true
        },
        "tape": {
            "label": "Tape",
            "cmd": "npm",
            "args": [ "run", "test", "--", "--color" ],
            "clear": true,
            "meta": [ "status" ]
        },
        "babel": {
            "label": "Babel",
            "cmd": "npm",
            "args": [ "run", "build", "--", "--color" ]
        },
        "debug": {
            "label": "Node inspect",
            "cmd": "node",
            "args": [ "--inspect-brk", "source/test.js" ],
            "clear": true
        }
    },

    "layout": {
        "td:70": {
            "tr:50": [ "tape", "flow" ],
            "tr": [ "eslint" ]
        },
        "td": [ "debug", "babel" ]
    }

}
