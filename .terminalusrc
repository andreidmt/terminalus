{
    "name"  : "Halt and catch fire",
    "notify": true,
    "frames": {
        "eslint": {
            "label": "ESLint",
            "cmd"  : "npm",
            "args" : [ "run", "lint", "--", "--color" ],
            "stderr": false,
            "watch": {
                "glob": "source/"
            }
        },
        "flow": {
            "label"         : "Flow",
            "cmd"           : "npm",
            "args"          : [ "run", "flow", "--", "--color=always" ],
            "stderr"        : false,
            "clearOnRestart": true
        },
        "tape": {
            "label"         : "Tape",
            "cmd"           : "npm",
            "args"          : [ "run", "test", "--", "--color" ],
            "stderr"        : false,
            "clearOnRestart": true
        },
        "ls1": {
            "label": "LS",
            "cmd"  : "ls",
            "args" : [ "-a" ]
        },
        "ls2": {
            "label": "LS 2",
            "cmd"  : "ls",
            "args" : [ "-a" ]
        }
    },
    "layout": [
        [ "ls1:30", "flow:40", "tape" ],
        [ "eslint:60", "ls2" ]
    ]

